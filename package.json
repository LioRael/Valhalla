{
  "name": "valhalla",
  "private": true,
  "scripts": {
    "start": "turbo build --filter=!./apps/docs && turbo start --filter=./apps/web",
    "build": "turbo build --filter=!./apps/docs",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,mdx}\"",
    "clean": "pnpm -r exec rimraf node_modules .turbo .next dist && rimraf node_modules .turbo .pnpm-lock.yaml",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "db:push": "turbo run db:push",
    "db:seed": "turbo run db:seed",
    "generate": "turbo run generate",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build --filter=!./apps/* && changeset publish",
    "docs": "turbo dev --filter=./apps/docs"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "pnpm": "^9.7.0",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "rimraf": "^6.0.1",
    "turbo": "^2.0.12",
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@9.6.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "env-cmd": "^10.1.0"
  }
}
