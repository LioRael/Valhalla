{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["VERCEL_URL", "PORT"],
  "tasks": {
    "build": {
      "dependsOn": ["^generate", "^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "start": {
      "dependsOn": ["^build", "^start"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:migrate:deploy": {},
    "db:push": {},
    "db:seed": {},
    "generate": {
      "dependsOn": ["^generate"]
    }
  }
}
