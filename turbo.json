{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["VERCEL_URL", "ENV", "PORT", "HOSTNAME", "AUTH_TRUST_HOST"],
  "tasks": {
    "build": {
      "dependsOn": ["^db:generate", "^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:migrate:deploy": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:seed": {
      "cache": false
    },
    "db:generate": {
      "dependsOn": ["^db:generate"],
      "cache": false
    }
  }
}
